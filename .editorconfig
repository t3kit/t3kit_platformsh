# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# HTML-Files
[*.html]
indent_size = 4
indent_style = tab

# TMPL-Files
[*.tmpl]
indent_style = tab
indent_size = 4

# PHP-Files
[*.php]
indent_style = space
indent_size = 4

# TypoScript
[*.{txt,ts,setupts,constantsts,pagets}]
indent_size = 4
indent_style = space

[*.{json,yml,md,sql}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.{xml,xlf,xsd,sql}]
indent_size = 2
indent_style = tab
